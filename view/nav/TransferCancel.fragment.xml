<core:FragmentDefinition
	xmlns:layout="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">

	<Dialog id="cancelTransferDialog" title="Cancel Processing" showHeader="true" draggable="true" type="Message" state="Information">
		
		<layout:VerticalLayout class="sapUiContentPadding">
			<Text text="{i18n>trasnferCancel}"/>
			<Text text="Terminate transaction?"/>
		</layout:VerticalLayout>

		<beginButton>
			<Button text="Yes" press="onConfirm" type="Ghost"/>
		</beginButton>

		<endButton>
			<Button text="No" press="onCancel" type="Ghost"/>
		</endButton>
	</Dialog>

</core:FragmentDefinition>
